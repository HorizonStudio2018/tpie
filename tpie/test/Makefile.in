# Makefile for TPIE test applications.

# Use gmake on this Makefile.  It relies on the default rules, and 
# Use gmake -p to see the default rules.

TPIEINC = ../include

TPIELIBDIR = ../lib

TPIELIB = $(TPIELIBDIR)/libtpie.a

CXXFLAGS = -O # -g

CPPFLAGS = -I$(TPIEINC) -DDEBUG_ASSERTIONS=1 -DDEBUG_STR=1 -DDEBUG_CERR=1

LDLIBS = -L$(TPIELIBDIR) -ltpie

FSCAT=bte_fs_cat

MMAP_TEST = mmb_stream_test

MMTOBJS = mmb_stream_test.o

AMI_SCAN = ami_scan
AMISCANOBJS = ami_scan.o

AMI_MERGE = test_ami_merge
AMIMERGEOBJS = test_ami_merge.o

APPS=$(AMI_MERGE)

FSCATOBJS = bte_fs_cat.o 

$(APPS):

$(FSCAT): $(FSCATOBJS) $(TPIELIB)
	$(LINK.cc) $^ $(LOADLIBES) $(LDLIBS) -o $@

$(MMAP_TEST): $(MMTOBJS) $(TPIELIB)
	$(LINK.cc) $^ $(LOADLIBES) $(LDLIBS) -o $@

$(AMI_SCAN): $(AMISCANOBJS) $(TPIELIB)
	$(LINK.cc) $^ $(LOADLIBES) $(LDLIBS) -o $@

$(AMI_MERGE): $(AMIMERGEOBJS) $(TPIELIB)
	$(LINK.cc) $^ $(LOADLIBES) $(LDLIBS) -o $@

