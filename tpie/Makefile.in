MY_DEFS := @DEFS@
MY_LIBS := @LIBS@

SHELL := /bin/csh

# Send all variables into recursive makes.
export

# The directories storing the components of the system

LIBPATH := ./lib/

LIBSRCPATH := $(LIBPATH)src/

APPSPATH := ./apps/

INCPATH := ./include/

usage:
	@echo $(MAKE) "[ all | inc | lib | apps | clean | distclean ]"

all: inc lib apps

inc:
	$(MAKE) -C $(INCPATH) all

lib: 
	$(MAKE) -C $(LIBSRCPATH) all
	$(MAKE) -C $(LIBPATH) all

apps: 
	$(MAKE) -C $(APPSPATH) all


.PHONY : clean lib inc apps usage all distclean

clean:
	$(MAKE) -C $(APPSPATH) $@
	$(MAKE) -C $(LIBPATH) $@
	$(MAKE) -C $(INCPATH) $@

cleandir = (rm -f $(dir)*~; rm -f $(dir)Makefile)

dirs := ./ $(APPSPATH) $(LIBPATH) $(LIBSRCPATH) $(INCPATH)
 
distclean: clean
	-$(foreach dir,$(dirs),$(cleandir);)
